{
    "require": {
        "fakerphp/faker": "^1.23",
        "phpmyadmin/sql-parser": "^5.11"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5"
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage --coverage-clover coverage.xml",
        "test-ci": "phpunit --coverage-clover coverage.xml --log-junit junit.xml"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "App\\Controllers\\": "controllers/",
            "App\\Models\\": "models/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
