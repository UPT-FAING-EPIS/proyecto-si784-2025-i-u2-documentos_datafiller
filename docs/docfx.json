{
  "metadata": [
    {
      "src": [
        {
          "files": ["**/*.php"],
          "src": "../DATAFILLER"
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": ["*.md", "manual/*.md", "api/*.yml"]
      },
      {
        "files": ["../FD*.md"],
        "src": ".",
        "dest": "informes"
      }
    ],
    "resource": [
      {
        "files": ["images/**", "videos/**", "traces/**"]
      }
    ],
    "dest": "_site",
    "template": ["default"],
    "globalMetadata": {
      "_appTitle": "DATAFILLER - Documentación Técnica",
      "_enableSearch": true
    }
  },
  "pdf": {
    "content": [
      {
        "files": ["*.md", "manual/*.md", "../FD*.md"]
      }
    ],
    "dest": "_pdf",
    "wkhtmltopdf": {
      "additionalArguments": "--enable-local-file-access"
    }
  }
}